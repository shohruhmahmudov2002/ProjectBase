{
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://0.0.0.0:5000"
      }
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=projectbase;Username=postgres;Password=postgres",
    "Localhost": "Host=localhost;Port=5432;Database=projectbase;Username=postgres;Password=postgres"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "JwtSettings": {
    "SecretKey": "your-super-secret-key-must-be-at-least-32-characters-long!",
    "RefreshTokenSecretKey": "your-super-secret-key-must-be-at-least-32-characters-long&",
    "Issuer": "ProjectBase",
    "Audience": "ProjectBaseUsers",
    "ExpirationMinutes": 60,
    "RefreshTokenExpiresInDays": 30
  },
  "RateLimiter": {
    "GlobalLimiter": {
      "PermitLimit": 100,
      "WindowInMinutes": 1,
      "QueueLimit": 10
    }
  },
  "SwaggerSettings": {
    "Enabled": true,
    "Title": "ProjectBase API",
    "Version": "v1",
    "Description": "ProjectBase Web API Documentation",
    "RoutePrefix": "swagger",
    "ContactName": "Your Name",
    "ContactEmail": "your.email@example.com",
    "ContactUrl": "https://example.uz",
    "ProductionUrl": "",
    "StagingUrl": "",
    "AllowedSwaggerIPs": [
      "127.0.0.1",
      "::1"
    ]
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/log-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30
        }
      }
    ],
    "Enrich": [ "FromLogContext" ]
  },
  "CorsSettings": {
    "Policies": {
      "ProductionPolicy": {
        "AllowedOrigins": [
          "https://example.uz",
          "https://www.example.uz",
          "https://admin.example.uz"
        ],
        "AllowedMethods": [ "GET", "POST", "PUT", "DELETE", "PATCH" ],
        "AllowedHeaders": [ "Content-Type", "Authorization" ],
        "ExposedHeaders": [ "Content-Disposition", "X-Pagination" ],
        "AllowCredentials": true,
        "AllowAnyOrigin": false
      },
      "DevelopmentPolicy": {
        "AllowedOrigins": [],
        "AllowedMethods": [],
        "AllowedHeaders": [],
        "ExposedHeaders": [ "Content-Disposition", "X-Pagination" ],
        "AllowCredentials": false,
        "AllowAnyOrigin": true
      },
      "LocalhostPolicy": {
        "AllowedOrigins": [
          "http://localhost:3000",
          "http://localhost:5000",
          "http://localhost:5173",
          "http://127.0.0.1:3000",
          "http://127.0.0.1:5000",
          "http://127.0.0.1:5173"
        ],
        "AllowedMethods": [],
        "AllowedHeaders": [],
        "ExposedHeaders": [ "Content-Disposition", "X-Pagination" ],
        "AllowCredentials": true,
        "AllowAnyOrigin": false
      }
    }
  }
}
